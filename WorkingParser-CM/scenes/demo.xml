<yas>
    <scene root="scene" axis_length="5" />

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/aefeup.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>

        <primitive id="big_thin_torus">
            <torus inner="0.5" outer="5" slices="6" loops="20" />
        </primitive>

        <primitive id="long_cylinder">
            <cylinder height="5" top="0.1" base="0.1" stacks="4" slices="8" />
        </primitive>

        <primitive id="regular_cylinder">
            <cylinder height="2" top="1" base="1" stacks="3" slices="8" />
        </primitive>

    </primitives>

    <components>

        <component id="scene">

            <transformation>
            </transformation>

            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="none" />

            <children>
                <componentref id="wheel" />
            </children>

        </component>

        <component id="wheel">
            <transformation>
            </transformation>

            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="big_thin_torus" />
                <componentref id="wheel_radius_1" />
                <componentref id="wheel_radius_2" />
                <componentref id="wheel_radius_3" />
                <componentref id="wheel_radius_4" />
                <componentref id="wheel_radius_5" />
                <componentref id="wheel_radius_6" />
                <componentref id="axis_bolt" />
            </children>
        </component>

        <component id="wheel_radius_1">
            <transformation>
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="long_cylinder" />
            </children>
        </component>

        <component id="wheel_radius_2">
            <transformation>
                <rotate axis="z" angle="60" />
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="long_cylinder" />
            </children>
        </component>

        <component id="wheel_radius_3">
            <transformation>
                <rotate axis="z" angle="120" />
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="long_cylinder" />
            </children>
        </component>

        <component id="wheel_radius_4">
            <transformation>
                <rotate axis="z" angle="180" />
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="long_cylinder" />
            </children>
        </component>

        <component id="wheel_radius_5">
            <transformation>
                <rotate axis="z" angle="240" />
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="long_cylinder" />
            </children>
        </component>

        <component id="wheel_radius_6">
            <transformation>
                <rotate axis="z" angle="300" />
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="long_cylinder" />
            </children>
        </component>

        <component id="axis_bolt">
            <transformation>
                <translate x="0" y="0" z="-0.8" />
                <scale x="0.3" y="0.3" z="0.8" />
            </transformation>

            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="regular_cylinder" />
            </children>
        </component>

    </components>
</yas>