<yas>
    <scene root="scene" axis_length="5" />

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/aefeup.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>

        <primitive id="big_thin_torus">
            <torus inner="0.5" outer="5" slices="8" loops="20" />
        </primitive>

        <primitive id="regular_torus">
            <torus inner="1" outer="2" slices="8" loops="20" />
        </primitive>

        <primitive id="long_cylinder">
            <cylinder height="5" top="0.1" base="0.1" stacks="4" slices="8" />
        </primitive>

        <primitive id="regular_cylinder">
            <cylinder height="2" top="1" base="1" stacks="3" slices="8" />
        </primitive>

        <primitive id="sphere2">
            <sphere radius="2" stacks="8" slices="8" />
        </primitive>

        <primitive id="cone1.5_2.5">
            <cylinder top="1.5" base="2.5" height="2" slices="8" stacks="4" /> 
        </primitive>

        <primitive id="equi_triangle_xz">
            <triangle x1="0" y1="0" z1="-1" x2="-1.732" y2="0" z2="0" x3="0" y3="0" z3="1" />
        </primitive>


    </primitives>

    <components>

        <component id="scene">

            <transformation>
            </transformation>

            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="none" />

            <children>
                <componentref id="bicycle"/>
            </children>

        </component>

        <component id="bicycle">
            <transformation>
            </transformation>

            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="none" />

            <children>
